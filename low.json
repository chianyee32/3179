{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "transparent",
    "title": { "text": "Top 10 Lowest Average Salary Countries" },
    "data": {
        "url": "https://raw.githubusercontent.com/chianyee32/3179/refs/heads/main/salary_data.csv"
    },
    "transform": [
        {
            "calculate": "isValid(datum.Average) ? +datum.Average : null",
            "as": "average_salary"
        },
        {
            "window": [
                {"op": "rank", "as": "rank"}
            ],
            "sort": [{"field": "average_salary", "order": "ascending"}]
        },
        {
            "filter": "datum.rank <= 10"
        }
    ],
    "width": 500,
    "height":300,
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Country",
            "type": "nominal",
            "title": "Country",
            "sort": "-y",
            "axis": {
                "labelAngle": -45
            }
        },
        "y": {
            "field": "average_salary",
            "type": "quantitative",
            "title": "Average Salary (USD)",
            "axis": {
                "format": ",.0f"
            }
        },
        "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "average_salary", "type": "quantitative", "title": "Average Salary (USD)"}
        ]
    },
    "config": {
        "bar": {"color": "#e75d38"}
    }
}
